{% block title %} Accueil {% endblock %}
{% extends 'base.html.twig' %}


{% block stylesheets %}
    <style type="text/css">
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
    {{ parent() }}

{% endblock %}

{% block body %}


    <section id="notreprojet">
        <div class="container">
            <div class="row" style="width: 74%;margin: 0 auto;">
                <div class="col-sm-8">

                    <div id="map"></div>
                </div>

                <div class="col-sm-4">
                    <form action="{{ path('aves_submit') }}" method="post">
                        <div class="form-group">
                            <label for="autocomplete">Tapez le nom d'un oiseau</label> :
                            <input name= "key" id="autocomplete" data-url="{{ path('ajax_search') }}" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">valider</button>
                    </form>
                </div>
            </div>

        </div>
    </section>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="{{ asset('js/aves.js') }}"></script>
    <script src="{{ asset('slick-master/slick/slick.min.js') }}" type="text/javascript" charset="utf-8"></script>

    <script>
        function initMap() {
            var coordonnes = {lat: 4.9, lng: -52.3};

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 4,
                center: coordonnes
            });
            var marker = new google.maps.Marker({
                position: coordonnes,
                map: map,
                title: "hello"
            });

        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key={{ container.parameter('api_map_key') }}&callback=initMap"></script>
{% endblock %}