{% extends 'base.html.twig' %}
{% block title %} Connexion {% endblock %}

{%  block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
<div class="container">
<div class="row">
    <div class="col-sm-6">
        <h2>Connexion</h2>
        <hr>

        <div class="form">
            {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endif %}

            <form class="login-form" action="{{ path('login_check') }}" method="post">
                <input type="text" id="username" placeholder="username" name="_username" value="{{ last_username }}">
                <input type="password" placeholder="password" name="_password"/>
                <input type="submit" value="connexion">
                <p class="message">Mot de passe oubli√©? <a href="{{ path('password_page') }}">Faire une demande de nouveau mot de passe</a></p>
            </form>
        </div>
    </div>

<div class="col-sm-6">
        <h2>Inscription</h2>
    <hr>
        {# src/OC/PlatformBundle/Resources/views/Advert/form.html.twig #}

        <div class="well">
        {{ form(form) }}
    </div>

         </div>
</div>
{% endblock %}